<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:style/Theme.Holo.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="CodeFont">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="LoadingFont">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SplashTitleFont">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="NewsFeedSubject" parent="CodeFont">
        <item name="android:textSize">17sp</item>
    </style>
    <style name="EventTime" parent="CodeFont">
        <item name="android:textSize">13sp</item>
    </style>
    <style name="NewsFeedItems" parent="CodeFont">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="SplashTitle" parent="SplashTitleFont">
        <item name="android:textSize">80sp</item>
    </style>
    <style name="LikeableText" parent="CodeFont">
        <item name="android:textSize">15sp</item>
    </style>

</resources>
